{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
